#:kivy 2.1.0

<Home>:
    name: 'Home'
    MDRelativeLayout:
        size_hint: .86, None
        height: 300
        # adaptive_height: True
        # md_bg_color: .6, .2, .8, 1
        pos_hint: {'center_x': .5, 'top': .88}

        MDRelativeLayout:
            size_hint_x: 1
            adaptive_height: True
            height: root.ids.ddi.height + 2
            pos_hint: {'center_x': .5, 'top': 1}
            # md_bg_color: .8, .6, .2, 1

            MDTextField:
                id: ddi
                mode: 'rectangle'
                hint_text: 'DDI'
                text: '55'
                size_hint_x: .14
                pos_hint: {'x': .04, 'top': 1}

            MDTextField:
                id: phone_number
                mode: 'rectangle'
                hint_text: 'Phone Number'
                text: '88 9 9999 9999'
                size_hint_x: .6
                pos_hint: {'right': .96, 'top': 1}
        
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5, 'top': .772}
            size_hint_x: 1
            adaptive_height: True
            # md_bg_color: 240/250, 240/250, 20/20, 1
            spacing: 18

            MDTextField:
                mode: 'rectangle'
                max_text_length: 255
                multiline: True
                hint_text: 'Custom Message (optional)'
                pos_hint: {'center_x': 0.5, 'top': .88}
                size_hint_x: .92
                # height: 182
                id: message
                text: 'i am a message'
            
            MDRaisedButton:
                text: 'Generate'
                pos_hint: {'center_x': .5, 'y': .2}
                size_hint_x: 1
                font_style: 'Button'
            
            MDLabel:
                text: 'Your data will only be saved locally'
                halign: 'center'
                font_style: 'Overline'
